        <div class="panel panel-default" ng-view></div>
    </div>
    <div class="container body-content">
        <hr />
        <footer>
            <p>&copy; 2016 - My ASP.NET Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
